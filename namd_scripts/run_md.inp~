#############################################################
## JOB DESCRIPTION                                         ##
#############################################################

# Minimization and md simulation of a protein in vacuum 


#############################################################
## ADJUSTABLE PARAMETERS                                   ##
#############################################################


set protein        6l1goj_mod_vac_rmwc_slv_min_ntrl
set protDir        /panasas/scratch/tekpinar/namdScripts
set outDir         /panasas/scratch/tekpinar/namdScripts
set dataDir        /user/tekpinar/toppar
set outputfile     $outDir/${protein}_namd.out

structure          $protDir/$protein.psf
coordinates        $protDir/$protein.pdb

temperature        300

#seed               12345

#outputname         $outputfile

firsttimestep      0

#############################################################
## SIMULATION PARAMETERS                                   ##
#############################################################

# Input
paraTypeCharmm	    on
parameters          $dataDir/par_all27_prot_na_atp.prm

# Force-Field Parameters
exclude             scaled1-4
1-4scaling          1.0
cutoff              12.
switching           on
switchdist          10.
pairlistdist        13.5
margin              0.0

# Integrator Parameters
timestep            2.0  ;# 2fs/step
rigidBonds          all  ;# needed for 2fs steps
nonbondedFreq       1
fullElectFrequency  2  
stepspercycle       10

# Constant Temperature Control
langevin            on    ;# do langevin dynamics
langevinDamping     5     ;# damping coefficient (gamma) of 5/ps
langevinTemp        300
langevinHydrogen    off    ;# don't couple langevin bath to hydrogens

# Periodic Boundary Conditions
cellBasisVector1    120.0    0.0   0.0
cellBasisVector2     0.0   85.0   0.0
cellBasisVector3     0.0    0.0  83.0
cellOrigin           0.0    0.0   0.0

wrapAll             on


# PME (for full-system periodic electrostatics)
PME                 yes
PMEGridSizeX        120
PMEGridSizeY        81
PMEGridSizeZ        81


# Constant Pressure Control (variable volume)
useGroupPressure      yes ;# needed for rigidBonds
useFlexibleCell       no 
useConstantArea       no

langevinPiston        on
langevinPistonTarget  1.01325 ;#  in bar -> 1 atm
langevinPistonPeriod  100.
langevinPistonDecay   50.
langevinPistonTemp    300

# Output
outputName          $outputfile

restartfreq         500     ;# 500steps = every 1ps
dcdfreq             500
xstFreq             500
outputEnergies      500
outputPressure      500


#############################################################
## EXTRA PARAMETERS                                        ##
#############################################################


#############################################################
## EXECUTION SCRIPT                                        ##
#############################################################

# Minimization
minimize            100
reinitvels          300

run 50000 ;# 50 ps




